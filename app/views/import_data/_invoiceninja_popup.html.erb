<div id="ninjaModal" class="modal editableModal importModal">
  <div class="modal-content">
    <%= form_for :ninja_invoice, url: import_invoiceninja_data_import_data_path,  :html => {multipart: true, remote: true, novalidate: "", class: "import_freshbook_form_1"} do |f| %>
      <div class="modal-header clearfix text-content">
        <div class="modal-action-btn right">
          <%= f.submit "Submit", :class => "btn_large submit model-submit-btn hidden" %>
          <a href="javascript:void(0);" onclick="$('.model-submit-btn').click();" title="Import" class="modal-action waves-effect">
            <i class="material-icons" >done</i>
          </a>
          <a href="javascript:void(0);" title="Cancel" class="modal-action modal-close waves-effect">
            <i class="material-icons close">close</i>
          </a>
        </div>
        <h5 class="left text-blue">Please export the invoices from your invoice ninja account.</h5>
      </div>
      <div class="modal-body">
        <p class="fb_error"></p>
        <h5 class="left text-blue">Please select the clients and invoice files to upload.</h5>
        <div class="row">
          <div class="input-field col s12">
            <%= f.file_field :invoice, required: true, placeholder: t('File to import')  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
