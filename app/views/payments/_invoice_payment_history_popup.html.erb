<div id="invoice_payment_historyModal" class="modal editableModal templateModal">
  <div class="modal-content">
    <div class="modal-header clearfix text-content">
      <div class="modal-action-btn right">
        <a href="javascript:void(0);" title="<%= t('views.common.cancel') %>" class="modal-action modal-close waves-effect">
          <i class="material-icons close">close</i>
        </a>
      </div>
      <h5 class="left">
        Invoice Payment History
      </h5>
    </div>
      <div class="modal-body">
        <table class="bordered responsive-table">
          <thead>
          <tr>
            <th>Invoice</th>
            <th>Client</th>
            <th>Type</th>
            <th>Notes</th>
            <th>Date</th>
            <th>Amount</th>
          </tr>
          </thead>
          <tbody>
          <% if @payment != [] %>
            <% @payment.each do |payment|%>
              <tr>
                <td><%= payment.invoice.invoice_number%></td>
                <td><%= payment.client_name %></td>
                <td><%= payment.payment_method || payment.payment_type %></td>
                <td><%= payment.notes %></td>
                <td><%= payment.payment_date %></td>
                <td><%= "#{number_to_currency(payment.payment_amount, unit: payment.invoice.currency.code )}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <h5 class="center">
            Nothing to show
          </h5>
        <% end %>
      </div>
  </div>
</div>